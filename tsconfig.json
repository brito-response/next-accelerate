{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "jest.config.js",
    "**/*.config.ts",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}